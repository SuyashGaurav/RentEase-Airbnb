<script>
    function removeSection() {
        var sectionElement = document.getElementById("section");
        if(sectionElement) {
            sectionElement.remove();
        }
    }
    setTimeout(removeSection, 6000)
</script>

<div id="section">
    <% if(success && success.length){ %>
        <div class="alert alert-success mt-3 alert-dismissible fade show col-7 offset-2" role="alert">
            <%= success %>
        <button type="button" class="btn-close" id="alert-btn" onclick="removeSection()"></button>
        </div>
    <% } %>
    <% if(error && error.length){ %>
        <div class="alert alert-danger mt-3 alert-dismissible fade show col-7 offset-2" role="alert">
            <%= error %>
        <button type="button" class="btn-close" onclick="removeSection()"></button>
        </div>
    <% } %>
</div>