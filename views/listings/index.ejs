    </div>

    <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"  style="height: 18rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                   <b> <%= listing.title %> <br> </b>
                    <b>&#8377;<%= listing.price.toLocaleString("en-IN") %></b> /night
                    <!-- <i class="tax-info">&nbsp; &nbsp; +18% GST</i> -->
                  </p>
                </div>
            </div>
            </a>
            <% } %>
    </div>
</body>

